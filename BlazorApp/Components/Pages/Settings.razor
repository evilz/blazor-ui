@page "/settings"
@rendermode InteractiveServer

<PageTitle>Settings - Blazor UI</PageTitle>

<div class="mb-8">
    <h1 class="text-3xl font-bold text-slate-800 mb-1">Settings</h1>
    <p class="text-slate-500">Manage your application settings</p>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <Card>
        <h3 class="text-lg font-semibold text-slate-800 mb-4">Profile Settings</h3>
        <div class="mb-6">
            <label class="block mb-2 font-medium text-slate-600 text-sm">Display Name</label>
            <input type="text" class="w-full px-3.5 py-2.5 border border-slate-200 rounded-md text-sm text-slate-800 focus:outline-none focus:border-blue-500 focus:ring-3 focus:ring-blue-100" value="Admin User" />
        </div>
        <div class="mb-6">
            <label class="block mb-2 font-medium text-slate-600 text-sm">Email</label>
            <input type="email" class="w-full px-3.5 py-2.5 border border-slate-200 rounded-md text-sm text-slate-800 focus:outline-none focus:border-blue-500 focus:ring-3 focus:ring-blue-100" value="admin@example.com" />
        </div>
        <div class="mb-6">
            <label class="block mb-2 font-medium text-slate-600 text-sm">Role</label>
            <input type="text" class="w-full px-3.5 py-2.5 border border-slate-200 rounded-md text-sm text-slate-800 bg-slate-100 cursor-not-allowed" value="Administrator" disabled />
        </div>
        <Button Color="ButtonColor.Primary">Save Changes</Button>
    </Card>

    <Card>
        <h3 class="text-lg font-semibold text-slate-800 mb-4">Notification Settings</h3>
        <div class="flex justify-between items-center py-4 border-b border-slate-200">
            <div class="flex-1">
                <div class="font-medium text-slate-800 mb-1">Email Notifications</div>
                <div class="text-sm text-slate-500">Receive notifications via email</div>
            </div>
            <Switch />
        </div>
        <div class="flex justify-between items-center py-4 border-b border-slate-200">
            <div class="flex-1">
                <div class="font-medium text-slate-800 mb-1">Push Notifications</div>
                <div class="text-sm text-slate-500">Receive push notifications</div>
            </div>
            <Switch />
        </div>
        <div class="flex justify-between items-center py-4">
            <div class="flex-1">
                <div class="font-medium text-slate-800 mb-1">Weekly Reports</div>
                <div class="text-sm text-slate-500">Get weekly summary reports</div>
            </div>
            <Switch />
        </div>
    </Card>

    <Card>
        <h3 class="text-lg font-semibold text-slate-800 mb-4">Security</h3>
        <div class="mb-6">
            <label class="block mb-2 font-medium text-slate-600 text-sm">Current Password</label>
            <input type="password" class="w-full px-3.5 py-2.5 border border-slate-200 rounded-md text-sm text-slate-800 focus:outline-none focus:border-blue-500 focus:ring-3 focus:ring-blue-100" placeholder="Enter current password" />
        </div>
        <div class="mb-6">
            <label class="block mb-2 font-medium text-slate-600 text-sm">New Password</label>
            <input type="password" class="w-full px-3.5 py-2.5 border border-slate-200 rounded-md text-sm text-slate-800 focus:outline-none focus:border-blue-500 focus:ring-3 focus:ring-blue-100" placeholder="Enter new password" />
        </div>
        <div class="mb-6">
            <label class="block mb-2 font-medium text-slate-600 text-sm">Confirm Password</label>
            <input type="password" class="w-full px-3.5 py-2.5 border border-slate-200 rounded-md text-sm text-slate-800 focus:outline-none focus:border-blue-500 focus:ring-3 focus:ring-blue-100" placeholder="Confirm new password" />
        </div>
        <Button Color="ButtonColor.Primary">Update Password</Button>
    </Card>

    <Card>
        <h3 class="text-lg font-semibold text-slate-800 mb-4">Appearance</h3>
        <div class="flex justify-between items-center py-4 border-b border-slate-200">
            <div class="flex-1">
                <div class="font-medium text-slate-800 mb-1">Dark Mode</div>
                <div class="text-sm text-slate-500">Switch to dark theme</div>
            </div>
            <Switch />
        </div>
        <div class="mb-6 mt-4">
            <label class="block mb-2 font-medium text-slate-600 text-sm">Language</label>
            <select class="w-full px-3.5 py-2.5 border border-slate-200 rounded-md text-sm text-slate-800 focus:outline-none focus:border-blue-500 focus:ring-3 focus:ring-blue-100">
                <option>English</option>
                <option>Spanish</option>
                <option>French</option>
                <option>German</option>
            </select>
        </div>
        <Button Color="ButtonColor.Primary">Save Preferences</Button>
    </Card>
</div>
