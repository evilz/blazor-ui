@page "/settings"
@rendermode InteractiveServer

<PageTitle>Settings - Blazor UI</PageTitle>

<div class="page-header">
    <Breadcrumb Items="@breadcrumbItems" />
    <h1>Settings</h1>
    <p>Manage your application settings</p>
</div>

<div class="settings-grid">
    <Card Style="min-width: 350px;">
        <CardHeader>
            <div class="header-with-icon">
                <Icon Name="person" />
                <h3>Profile Settings</h3>
            </div>
        </CardHeader>
        <CardContent>
            <div style="display: flex; flex-direction: column; gap: 1rem;">
                <Input Label="Display Name" @bind-Value="displayName" TItem="string" />
                <Input Label="Email" @bind-Value="email" TItem="string" Type="email" />
                <Input Label="Role" @bind-Value="role" TItem="string" Disabled="true" />
            </div>
        </CardContent>
        <CardFooter>
            <Button Text="Save Changes" Style="width: 100%;" />
        </CardFooter>
    </Card>

    <Card Style="min-width: 350px;">
        <CardHeader>
            <div class="header-with-icon">
                <Icon Name="notifications" />
                <h3>Notification Settings</h3>
            </div>
        </CardHeader>
        <CardContent>
            <div class="setting-item">
                <div class="setting-info">
                    <div class="setting-title">Email Notifications</div>
                    <div class="setting-description">Receive notifications via email</div>
                </div>
                <input type="checkbox" class="form-check-input" />
            </div>
            <div class="setting-item">
                <div class="setting-info">
                    <div class="setting-title">Push Notifications</div>
                    <div class="setting-description">Receive push notifications</div>
                </div>
                <input type="checkbox" class="form-check-input" />
            </div>
            <div class="setting-item">
                <div class="setting-info">
                    <div class="setting-title">Weekly Reports</div>
                    <div class="setting-description">Get weekly summary reports</div>
                </div>
                <input type="checkbox" class="form-check-input" />
            </div>
        </CardContent>
    </Card>

    <Card Style="min-width: 350px;">
        <CardHeader>
            <div class="header-with-icon">
                <Icon Name="lock" />
                <h3>Security</h3>
            </div>
        </CardHeader>
        <CardContent>
            <div style="display: flex; flex-direction: column; gap: 1rem;">
                <Input Label="Current Password" @bind-Value="currentPassword" TItem="string" Type="password" Placeholder="Enter current password" />
                <Input Label="New Password" @bind-Value="newPassword" TItem="string" Type="password" Placeholder="Enter new password" />
                <Input Label="Confirm Password" @bind-Value="confirmPassword" TItem="string" Type="password" Placeholder="Confirm new password" />
            </div>
        </CardContent>
        <CardFooter>
            <Button Text="Update Password" Style="width: 100%;" />
        </CardFooter>
    </Card>

    <Card Style="min-width: 350px;">
        <CardHeader>
            <div class="header-with-icon">
                <Icon Name="palette" />
                <h3>Appearance</h3>
            </div>
        </CardHeader>
        <CardContent>
            <div class="setting-item">
                <div class="setting-info">
                    <div class="setting-title">Dark Mode</div>
                    <div class="setting-description">Switch to dark theme</div>
                </div>
                <input type="checkbox" class="form-check-input" />
            </div>
            <div style="margin-top: 1rem;">
                <Input Label="Language" @bind-Value="language" TItem="string" />
            </div>
        </CardContent>
        <CardFooter>
            <Button Text="Save Preferences" Style="width: 100%;" />
        </CardFooter>
    </Card>
</div>

@code {
    private List<Sysinfocus.AspNetCore.Components.Breadcrumb.BreadcrumbModel> breadcrumbItems = new();
    private string displayName = "Admin User";
    private string email = "admin@example.com";
    private string role = "Administrator";
    private string currentPassword = "";
    private string newPassword = "";
    private string confirmPassword = "";
    private string language = "English";

    protected override void OnInitialized()
    {
        breadcrumbItems = new List<Sysinfocus.AspNetCore.Components.Breadcrumb.BreadcrumbModel>
        {
            new Sysinfocus.AspNetCore.Components.Breadcrumb.BreadcrumbModel("Home") { Url = "/" },
            new Sysinfocus.AspNetCore.Components.Breadcrumb.BreadcrumbModel("Settings") { Url = "/settings" }
        };
    }
}

<style>
    .page-header {
        margin-bottom: 2rem;
    }

    .page-header h1 {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 0.25rem;
        color: #1e293b;
    }

    .page-header p {
        color: #64748b;
        margin: 0;
    }

    .settings-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 1.5rem;
    }

    .setting-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 0;
        border-bottom: 1px solid #e2e8f0;
    }

    .setting-item:last-child {
        border-bottom: none;
    }

    .setting-info {
        flex: 1;
    }

    .setting-title {
        font-weight: 500;
        color: #1e293b;
        margin-bottom: 0.25rem;
    }

    .setting-description {
        font-size: 0.875rem;
        color: #64748b;
    }

    .header-with-icon {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .header-with-icon h3 {
        margin: 0;
    }
</style>
