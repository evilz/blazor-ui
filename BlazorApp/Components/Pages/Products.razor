@page "/products"
@rendermode InteractiveServer

<PageTitle>Products - Blazor UI</PageTitle>

<div class="mb-8">
    <h1 class="text-3xl font-bold text-slate-800 mb-1">Products</h1>
    <p class="text-slate-500">Manage your product catalog</p>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <div class="bg-white rounded-lg p-6 shadow">
        <div class="text-center p-4">
            <div class="text-5xl mb-4">📦</div>
            <h3 class="text-2xl font-semibold mb-2 text-slate-800">Basic Package</h3>
            <p class="text-3xl font-bold text-blue-600 mb-2">$99/month</p>
            <p class="text-slate-500 mb-6">Perfect for individuals and small projects</p>
            <ul class="list-none p-0 mb-6 text-left space-y-2">
                <li class="text-slate-600 text-sm py-1">✓ 10GB Storage</li>
                <li class="text-slate-600 text-sm py-1">✓ Basic Support</li>
                <li class="text-slate-600 text-sm py-1">✓ 1 User</li>
            </ul>
            <button class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">View Details</button>
        </div>
    </div>

    <div class="bg-white rounded-lg p-6 shadow">
        <div class="text-center p-4">
            <div class="text-5xl mb-4">🎯</div>
            <h3 class="text-2xl font-semibold mb-2 text-slate-800">Standard Package</h3>
            <p class="text-3xl font-bold text-blue-600 mb-2">$149/month</p>
            <p class="text-slate-500 mb-6">Great for growing teams and businesses</p>
            <ul class="list-none p-0 mb-6 text-left space-y-2">
                <li class="text-slate-600 text-sm py-1">✓ 50GB Storage</li>
                <li class="text-slate-600 text-sm py-1">✓ Priority Support</li>
                <li class="text-slate-600 text-sm py-1">✓ 5 Users</li>
            </ul>
            <button class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">View Details</button>
        </div>
    </div>

    <div class="bg-white rounded-lg p-6 shadow">
        <div class="relative text-center p-4 bg-gradient-to-br from-indigo-50 to-purple-50 rounded-lg">
            <span class="inline-block px-3 py-1 rounded-full text-xs font-semibold bg-blue-600 text-white">Popular</span>
            <div class="text-5xl mb-4">⭐</div>
            <h3 class="text-2xl font-semibold mb-2 text-slate-800">Premium Package</h3>
            <p class="text-3xl font-bold text-blue-600 mb-2">$299/month</p>
            <p class="text-slate-500 mb-6">Best for professional teams</p>
            <ul class="list-none p-0 mb-6 text-left space-y-2">
                <li class="text-slate-600 text-sm py-1">✓ 200GB Storage</li>
                <li class="text-slate-600 text-sm py-1">✓ 24/7 Support</li>
                <li class="text-slate-600 text-sm py-1">✓ 20 Users</li>
            </ul>
            <button class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">View Details</button>
        </div>
    </div>

    <div class="bg-white rounded-lg p-6 shadow">
        <div class="text-center p-4">
            <div class="text-5xl mb-4">🚀</div>
            <h3 class="text-2xl font-semibold mb-2 text-slate-800">Enterprise Package</h3>
            <p class="text-3xl font-bold text-blue-600 mb-2">$599/month</p>
            <p class="text-slate-500 mb-6">For large organizations</p>
            <ul class="list-none p-0 mb-6 text-left space-y-2">
                <li class="text-slate-600 text-sm py-1">✓ Unlimited Storage</li>
                <li class="text-slate-600 text-sm py-1">✓ Dedicated Support</li>
                <li class="text-slate-600 text-sm py-1">✓ Unlimited Users</li>
            </ul>
            <button class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">View Details</button>
        </div>
    </div>
</div>
