@page "/"
@rendermode InteractiveServer

<PageTitle>Dashboard - Blazor UI</PageTitle>

<div class="page-header">
    <h1>Dashboard</h1>
    <p>Welcome to your dashboard overview</p>
</div>

<div class="dashboard-grid">
    <Card  Style="min-width: 250px;">
        <CardHeader >
            <div class="flex-row flex justify-between" style="justify-content: space-between;">
                
                <p>Total Revenue</p>
                <Badge Text="📉 -20%" Type="BadgeType.Outline" />
            </div>
            
        </CardHeader>
        <CardContent>
            <p class="text-2xl font-semibold tabular-nums @@[250px]/card:text-3xl">$45,231.89</p>
            <p class="stat-change positive">+20.1% from last month</p>
        </CardContent>
    </Card>

    <Card Style="min-width: 250px;">
        <CardHeader>
            <h3>New Customers</h3>
        </CardHeader>
        <CardContent>
            <p class="stat-value">+2,350</p>
            <p class="stat-change positive">+180.1% from last month</p>
        </CardContent>
    </Card>

    <Card Style="min-width: 250px;">
        <CardHeader>
            <h3>Active Orders</h3>
        </CardHeader>
        <CardContent>
            <p class="stat-value">+12,234</p>
            <p class="stat-change positive">+19% from last month</p>
        </CardContent>
    </Card>

    <Card Style="min-width: 250px;">
        <CardHeader>
            <h3>Total Sales</h3>
        </CardHeader>
        <CardContent>
            <p class="stat-value">+573</p>
            <p class="stat-change positive">+201 since last hour</p>
        </CardContent>
    </Card>
</div>

<div class="dashboard-charts">
    <Card>
        <CardHeader>
            <h3>Recent Activity</h3>
        </CardHeader>
        <CardContent>
            <div class="activity-list">
                <div class="activity-item">
                    <div class="activity-icon">
                        <Icon Name="shopping_bag" Size="24px" />
                    </div>
                    <div class="activity-content">
                        <p class="activity-title">New order received</p>
                        <p class="activity-time">2 minutes ago</p>
                    </div>
                </div>
                <div class="activity-item">
                    <div class="activity-icon">
                        <Icon Name="person_add" Size="24px" />
                    </div>
                    <div class="activity-content">
                        <p class="activity-title">New customer registered</p>
                        <p class="activity-time">15 minutes ago</p>
                    </div>
                </div>
                <div class="activity-item">
                    <div class="activity-icon">
                        <Icon Name="payments" Size="24px" />
                    </div>
                    <div class="activity-content">
                        <p class="activity-title">Payment received</p>
                        <p class="activity-time">1 hour ago</p>
                    </div>
                </div>
            </div>
        </CardContent>
    </Card>
</div>

<style>
    .page-header {
        margin-bottom: 2rem;
    }

    .page-header h1 {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 0.25rem;
        color: #1e293b;
    }

    .page-header p {
        color: #64748b;
        margin: 0;
    }

    .dashboard-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    /*.stat-value {*/
    /*    font-size: 2rem;*/
    /*    font-weight: 700;*/
    /*    color: #1e293b;*/
    /*    margin: 0 0 0.5rem 0;*/
    /*}*/

    .stat-change {
        font-size: 0.875rem;
        margin: 0;
    }

    .stat-change.positive {
        color: #16a34a;
    }

    .dashboard-charts {
        display: grid;
        gap: 1.5rem;
    }

    .activity-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .activity-item {
        display: flex;
        gap: 1rem;
        align-items: start;
    }

    .activity-icon {
        background: #f1f5f9;
        width: 3rem;
        height: 3rem;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 0.5rem;
        color: #475569;
    }

    .activity-content {
        flex: 1;
    }

    .activity-title {
        font-weight: 500;
        color: #1e293b;
        margin: 0 0 0.25rem 0;
    }

    .activity-time {
        font-size: 0.875rem;
        color: #64748b;
        margin: 0;
    }
</style>
