@page "/"
@rendermode InteractiveServer

<PageTitle>Dashboard - Blazor UI</PageTitle>

<div class="mb-8">
    <h1 class="text-3xl font-bold text-slate-800 mb-1">Dashboard</h1>
    <p class="text-slate-500">Welcome to your dashboard overview</p>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <Card>
        <h3 class="text-sm font-medium text-slate-500 mb-2">Total Revenue</h3>
        <p class="text-3xl font-bold text-slate-800 mb-2">$45,231.89</p>
        <p class="text-sm text-green-600">+20.1% from last month</p>
    </Card>

    <Card>
        <h3 class="text-sm font-medium text-slate-500 mb-2">New Customers</h3>
        <p class="text-3xl font-bold text-slate-800 mb-2">+2,350</p>
        <p class="text-sm text-green-600">+180.1% from last month</p>
    </Card>

    <Card>
        <h3 class="text-sm font-medium text-slate-500 mb-2">Active Orders</h3>
        <p class="text-3xl font-bold text-slate-800 mb-2">+12,234</p>
        <p class="text-sm text-green-600">+19% from last month</p>
    </Card>

    <Card>
        <h3 class="text-sm font-medium text-slate-500 mb-2">Total Sales</h3>
        <p class="text-3xl font-bold text-slate-800 mb-2">+573</p>
        <p class="text-sm text-green-600">+201 since last hour</p>
    </Card>
</div>

<Card>
    <h3 class="text-lg font-semibold text-slate-800 mb-4">Recent Activity</h3>
    <div class="space-y-4 mt-4">
        <div class="flex gap-4 items-start">
            <div class="text-2xl bg-slate-100 w-12 h-12 flex items-center justify-center rounded-lg">📦</div>
            <div class="flex-1">
                <p class="font-medium text-slate-800 mb-1">New order received</p>
                <p class="text-sm text-slate-500">2 minutes ago</p>
            </div>
        </div>
        <div class="flex gap-4 items-start">
            <div class="text-2xl bg-slate-100 w-12 h-12 flex items-center justify-center rounded-lg">👤</div>
            <div class="flex-1">
                <p class="font-medium text-slate-800 mb-1">New customer registered</p>
                <p class="text-sm text-slate-500">15 minutes ago</p>
            </div>
        </div>
        <div class="flex gap-4 items-start">
            <div class="text-2xl bg-slate-100 w-12 h-12 flex items-center justify-center rounded-lg">💰</div>
            <div class="flex-1">
                <p class="font-medium text-slate-800 mb-1">Payment received</p>
                <p class="text-sm text-slate-500">1 hour ago</p>
            </div>
        </div>
    </div>
</Card>
