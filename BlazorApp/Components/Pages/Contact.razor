        gap: 1rem;
    }

    .form-field {
        display: flex;
        flex-direction: column;
    }

    .input-label {
        font-size: 0.875rem;
        font-weight: 500;
        color: #1e293b;
        margin-bottom: 0.5rem;
    }

    .textarea-input {
        width: 100%;
