                <CardContent>
                    <div class="tabs-container">
                        <div class="tabs-header">
                            <button class="tab-button @(activeTab == "overview" ? "active" : "")" @onclick="@(() => activeTab = "overview")">
                                <Icon Name="dashboard" />
                                Overview
                            </button>
                            <button class="tab-button @(activeTab == "analytics" ? "active" : "")" @onclick="@(() => activeTab = "analytics")">
                                <Icon Name="analytics" />
                                Analytics
                            </button>
                            <button class="tab-button @(activeTab == "reports" ? "active" : "")" @onclick="@(() => activeTab = "reports")">
                                <Icon Name="description" />
                                Reports
                            </button>
                        </div>
                        <div class="tab-content">
                            @if (activeTab == "overview")
                            {
                                <div class="tab-panel">
                                    <h4>Overview Panel</h4>
                                    <p>This is the overview content with general information.</p>
                                </div>
                            }
                            else if (activeTab == "analytics")
                            {
                                <div class="tab-panel">
                                    <h4>Analytics Panel</h4>
                                    <p>View detailed analytics and metrics here.</p>
                                </div>
                            }
                            else if (activeTab == "reports")
                            {
                                <div class="tab-panel">
                                    <h4>Reports Panel</h4>
                                    <p>Access and download your reports.</p>
                                </div>
                            }
                        </div>
                    </div>
                </CardContent>
            </Card>

            <!-- Icon Showcase Card -->
            <Card>
                <CardHeader>
                    <div class="header-with-icon">
                        <Icon Name="emoji_emotions" />
