            </Card>

            <!-- Alert Messages Card -->
            <Card>
                <CardHeader>
                    <div class="header-with-icon">
                        <Icon Name="info" />
                        <h3>Alert Messages</h3>
                    </div>
                </CardHeader>
                <CardContent>
                    <div class="alerts-showcase">
                        <div class="alert alert-success">
                            <Icon Name="check_circle" Style="color: #16a34a;" />
                            <div>
                                <div class="alert-title">Success!</div>
                                <div class="alert-message">Your changes have been saved successfully.</div>
                            </div>
                        </div>
                        <div class="alert alert-warning">
                            <Icon Name="warning" Style="color: #f59e0b;" />
                            <div>
                                <div class="alert-title">Warning</div>
                                <div class="alert-message">Your session will expire in 5 minutes.</div>
                            </div>
                        </div>
                        <div class="alert alert-info">
                            <Icon Name="info" Style="color: #3b82f6;" />
                            <div>
                                <div class="alert-title">Information</div>
                                <div class="alert-message">A new version is available for download.</div>
                            </div>
                        </div>
                        <div class="alert alert-danger">
                            <Icon Name="error" Style="color: #ef4444;" />
                            <div>
                                <div class="alert-title">Error</div>
                                <div class="alert-message">Failed to process your request. Please try again.</div>
                            </div>
                        </div>
                    </div>
                </CardContent>
            </Card>
        </div>
    </div>

    <!-- Data Display Section -->
    <div class="components-section">
        <div class="section-header">
            <h2>Data Display</h2>
            <p>Tables and structured data presentation</p>
        </div>
        
        <div class="components-grid full-width">
            <!-- Data Table Card -->
            <Card>
                <CardHeader>
                    <div class="header-with-icon">
                        <Icon Name="table_chart" />
                        <h3>Recent Transactions</h3>
                    </div>
                </CardHeader>
                <CardContent>
                    <DataTable Items="transactions" TItem="Transaction">
                        <DataColumns Context="transaction">
                            <DataTableColumn TItem="Transaction" Header="ID" Property="x => x.Id" />
                            <DataTableColumn TItem="Transaction" Header="Date" Property="x => x.Date" />
                            <DataTableColumn TItem="Transaction" Header="Description" Property="x => x.Description" />
                            <DataTableColumn TItem="Transaction" Header="Category" Property="x => x.Category" />
                            <DataTableColumn TItem="Transaction" Header="Amount" Property="x => x.Amount" />
                            <DataTableColumn TItem="Transaction" Header="Status">
                                <Template>
                                    <span class="status-badge @GetTransactionStatusClass(transaction.Status)">@transaction.Status</span>
                                </Template>
                            </DataTableColumn>
                        </DataColumns>
                    </DataTable>
                </CardContent>
            </Card>
        </div>
    </div>

    <!-- Advanced Components Section -->
