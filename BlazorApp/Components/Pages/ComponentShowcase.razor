                        </div>
                        <div class="icon-item">
                            <Icon Name="mail" />
                            <span>mail</span>
                        </div>
                        <div class="icon-item">
                            <Icon Name="download" />
                            <span>download</span>
                        </div>
                        <div class="icon-item">
                            <Icon Name="upload" />
                            <span>upload</span>
                        </div>
                        <div class="icon-item">
                            <Icon Name="delete" />
                            <span>delete</span>
                        </div>
                    </div>
                </CardContent>
            </Card>

            <!-- Loading States Card -->
            <Card>
                <CardHeader>
                    <div class="header-with-icon">
                        <Icon Name="hourglass_empty" />
                        <h3>Loading States</h3>
                    </div>
                </CardHeader>
                <CardContent>
                    <div class="loading-showcase">
                        <div class="loading-item">
                            <div class="spinner spinner-border"></div>
                            <span>Border Spinner</span>
                        </div>
                        <div class="loading-item">
                            <div class="spinner spinner-grow"></div>
                            <span>Growing Spinner</span>
                        </div>
                        <div class="loading-item">
                            <div class="spinner spinner-pulse"></div>
                            <span>Pulse Animation</span>
                        </div>
                        <div class="loading-item">
                            <div class="dots-loader">
                                <span></span>
