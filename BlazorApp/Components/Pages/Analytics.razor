@page "/analytics"
@rendermode InteractiveServer

<PageTitle>Analytics - Blazor UI</PageTitle>

<div class="mb-8">
    <h1 class="text-3xl font-bold text-slate-800 mb-1">Analytics</h1>
    <p class="text-slate-500">Track your performance metrics</p>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-lg p-6 shadow">
        <h3 class="text-lg font-semibold text-slate-800 mb-4">Page Views</h3>
        <p class="text-3xl font-bold text-slate-800 my-2">125,432</p>
        <div class="flex gap-2 items-center text-sm">
            <span class="font-semibold text-green-600">↑ 12.5%</span>
            <span class="text-slate-500">vs last week</span>
        </div>
    </div>

    <div class="bg-white rounded-lg p-6 shadow">
        <h3 class="text-lg font-semibold text-slate-800 mb-4">Unique Visitors</h3>
        <p class="text-3xl font-bold text-slate-800 my-2">45,231</p>
        <div class="flex gap-2 items-center text-sm">
            <span class="font-semibold text-green-600">↑ 8.2%</span>
            <span class="text-slate-500">vs last week</span>
        </div>
    </div>

    <div class="bg-white rounded-lg p-6 shadow">
        <h3 class="text-lg font-semibold text-slate-800 mb-4">Bounce Rate</h3>
        <p class="text-3xl font-bold text-slate-800 my-2">34.5%</p>
        <div class="flex gap-2 items-center text-sm">
            <span class="font-semibold text-red-600">↓ 2.1%</span>
            <span class="text-slate-500">vs last week</span>
        </div>
    </div>

    <div class="bg-white rounded-lg p-6 shadow">
        <h3 class="text-lg font-semibold text-slate-800 mb-4">Avg. Session Duration</h3>
        <p class="text-3xl font-bold text-slate-800 my-2">3m 45s</p>
        <div class="flex gap-2 items-center text-sm">
            <span class="font-semibold text-green-600">↑ 15.3%</span>
            <span class="text-slate-500">vs last week</span>
        </div>
    </div>
</div>

<div class="bg-white rounded-lg p-6 shadow">
    <h3 class="text-lg font-semibold text-slate-800 mb-4">Top Pages</h3>
    <table class="w-full">
        <thead>
            <tr>
                <th class="text-left px-3 py-3 border-b-2 border-slate-200 font-semibold text-slate-600 text-sm">Page</th>
                <th class="text-left px-3 py-3 border-b-2 border-slate-200 font-semibold text-slate-600 text-sm">Views</th>
                <th class="text-left px-3 py-3 border-b-2 border-slate-200 font-semibold text-slate-600 text-sm">Avg. Time</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="px-3 py-3 border-b border-slate-200 text-slate-800">/dashboard</td>
                <td class="px-3 py-3 border-b border-slate-200 text-slate-800">12,543</td>
                <td class="px-3 py-3 border-b border-slate-200 text-slate-800">2m 15s</td>
            </tr>
            <tr>
                <td class="px-3 py-3 border-b border-slate-200 text-slate-800">/products</td>
                <td class="px-3 py-3 border-b border-slate-200 text-slate-800">8,234</td>
                <td class="px-3 py-3 border-b border-slate-200 text-slate-800">3m 30s</td>
            </tr>
            <tr>
                <td class="px-3 py-3 border-b border-slate-200 text-slate-800">/orders</td>
                <td class="px-3 py-3 border-b border-slate-200 text-slate-800">5,432</td>
                <td class="px-3 py-3 border-b border-slate-200 text-slate-800">1m 45s</td>
            </tr>
        </tbody>
    </table>
</div>
