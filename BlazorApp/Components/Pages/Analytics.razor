@page "/analytics"
@rendermode InteractiveServer

<PageTitle>Analytics - Blazor UI</PageTitle>

<div class="page-header">
    <h1>Analytics</h1>
    <p>Track your performance metrics</p>
</div>

<div class="analytics-grid">
    <Card Style="min-width: 250px;">
        <CardHeader>
            <h3>Page Views</h3>
        </CardHeader>
        <CardContent>
            <p class="metric-value">125,432</p>
            <div class="metric-trend">
                <span class="trend-indicator up">↑ 12.5%</span>
                <span class="trend-period">vs last week</span>
            </div>
        </CardContent>
    </Card>

    <Card Style="min-width: 250px;">
        <CardHeader>
            <h3>Unique Visitors</h3>
        </CardHeader>
        <CardContent>
            <p class="metric-value">45,231</p>
            <div class="metric-trend">
                <span class="trend-indicator up">↑ 8.2%</span>
                <span class="trend-period">vs last week</span>
            </div>
        </CardContent>
    </Card>

    <Card Style="min-width: 250px;">
        <CardHeader>
            <h3>Bounce Rate</h3>
        </CardHeader>
        <CardContent>
            <p class="metric-value">34.5%</p>
            <div class="metric-trend">
                <span class="trend-indicator down">↓ 2.1%</span>
                <span class="trend-period">vs last week</span>
            </div>
        </CardContent>
    </Card>

    <Card Style="min-width: 250px;">
        <CardHeader>
            <h3>Avg. Session Duration</h3>
        </CardHeader>
        <CardContent>
            <p class="metric-value">3m 45s</p>
            <div class="metric-trend">
                <span class="trend-indicator up">↑ 15.3%</span>
                <span class="trend-period">vs last week</span>
            </div>
        </CardContent>
    </Card>
</div>

<div class="analytics-details">
    <Card>
        <CardHeader>
            <h3>Top Pages</h3>
        </CardHeader>
        <CardContent>
            <table class="simple-table">
                <thead>
                    <tr>
                        <th>Page</th>
                        <th>Views</th>
                        <th>Avg. Time</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var stat in pageStats)
                    {
                        <tr>
                            <td>@stat.Path</td>
                            <td>@stat.Views</td>
                            <td>@stat.AvgTime</td>
                        </tr>
                    }
                </tbody>
            </table>
        </CardContent>
    </Card>
</div>

@code {
    private List<PageStat> pageStats = new()
    {
        new PageStat { Path = "/dashboard", Views = "12,543", AvgTime = "2m 15s" },
        new PageStat { Path = "/products", Views = "8,234", AvgTime = "3m 30s" },
        new PageStat { Path = "/orders", Views = "5,432", AvgTime = "1m 45s" }
    };

    public class PageStat
    {
        public string Path { get; set; } = "";
        public string Views { get; set; } = "";
        public string AvgTime { get; set; } = "";
    }
}

<style>
    .page-header {
        margin-bottom: 2rem;
    }

    .page-header h1 {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 0.25rem;
        color: #1e293b;
    }

    .page-header p {
        color: #64748b;
        margin: 0;
    }

    .analytics-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .metric-value {
        font-size: 2rem;
        font-weight: 700;
        color: #1e293b;
        margin: 0.5rem 0;
    }

    .metric-trend {
        display: flex;
        gap: 0.5rem;
        align-items: center;
        font-size: 0.875rem;
    }

    .trend-indicator {
        font-weight: 600;
    }

    .trend-indicator.up {
        color: #16a34a;
    }

    .trend-indicator.down {
        color: #dc2626;
    }

    .trend-period {
        color: #64748b;
    }

    .analytics-details {
        display: grid;
        gap: 1.5rem;
    }

    .simple-table {
        width: 100%;
        border-collapse: collapse;
    }

    .simple-table th {
        text-align: left;
        padding: 0.75rem;
        border-bottom: 2px solid #e2e8f0;
        font-weight: 600;
        color: #475569;
        font-size: 0.875rem;
    }

    .simple-table td {
        padding: 0.75rem;
        border-bottom: 1px solid #e2e8f0;
        color: #1e293b;
    }
</style>
