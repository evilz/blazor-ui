@page "/orders"
@rendermode InteractiveServer

<PageTitle>Orders - Blazor UI</PageTitle>

<div class="mb-8">
    <h1 class="text-3xl font-bold text-slate-800 mb-1">Orders</h1>
    <p class="text-slate-500">Manage and track customer orders</p>
</div>

<div class="bg-white rounded-lg p-6 shadow">
    <div class="flex justify-between items-center mb-6">
        <h3 class="text-lg font-semibold text-slate-800">Recent Orders</h3>
        <button class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">New Order</button>
    </div>
    
    <table class="w-full">
        <thead>
            <tr>
                <th class="text-left px-3 py-3 border-b-2 border-slate-200 font-semibold text-slate-600 text-sm">Order ID</th>
                <th class="text-left px-3 py-3 border-b-2 border-slate-200 font-semibold text-slate-600 text-sm">Customer</th>
                <th class="text-left px-3 py-3 border-b-2 border-slate-200 font-semibold text-slate-600 text-sm">Product</th>
                <th class="text-left px-3 py-3 border-b-2 border-slate-200 font-semibold text-slate-600 text-sm">Amount</th>
                <th class="text-left px-3 py-3 border-b-2 border-slate-200 font-semibold text-slate-600 text-sm">Status</th>
                <th class="text-left px-3 py-3 border-b-2 border-slate-200 font-semibold text-slate-600 text-sm">Date</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="px-3 py-3 border-b border-slate-200 text-slate-800">#12345</td>
                <td class="px-3 py-3 border-b border-slate-200 text-slate-800">John Doe</td>
                <td class="px-3 py-3 border-b border-slate-200 text-slate-800">Premium Package</td>
                <td class="px-3 py-3 border-b border-slate-200 text-slate-800">$299.00</td>
                <td class="px-3 py-3 border-b border-slate-200"><span class="inline-block px-3 py-1 rounded-full text-xs font-semibold bg-green-100 text-green-800">Completed</span></td>
                <td class="px-3 py-3 border-b border-slate-200 text-slate-800">Oct 12, 2025</td>
            </tr>
            <tr>
                <td class="px-3 py-3 border-b border-slate-200 text-slate-800">#12344</td>
                <td class="px-3 py-3 border-b border-slate-200 text-slate-800">Jane Smith</td>
                <td class="px-3 py-3 border-b border-slate-200 text-slate-800">Standard Package</td>
                <td class="px-3 py-3 border-b border-slate-200 text-slate-800">$149.00</td>
                <td class="px-3 py-3 border-b border-slate-200"><span class="inline-block px-3 py-1 rounded-full text-xs font-semibold bg-yellow-100 text-yellow-800">Pending</span></td>
                <td class="px-3 py-3 border-b border-slate-200 text-slate-800">Oct 12, 2025</td>
            </tr>
            <tr>
                <td class="px-3 py-3 border-b border-slate-200 text-slate-800">#12343</td>
                <td class="px-3 py-3 border-b border-slate-200 text-slate-800">Bob Johnson</td>
                <td class="px-3 py-3 border-b border-slate-200 text-slate-800">Enterprise Package</td>
                <td class="px-3 py-3 border-b border-slate-200 text-slate-800">$599.00</td>
                <td class="px-3 py-3 border-b border-slate-200"><span class="inline-block px-3 py-1 rounded-full text-xs font-semibold bg-blue-100 text-blue-800">Processing</span></td>
