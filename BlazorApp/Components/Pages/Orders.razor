@page "/orders"
@rendermode InteractiveServer

<PageTitle>Orders - Blazor UI</PageTitle>

<div class="page-header">
    <Breadcrumb Items="@breadcrumbItems" />
    <h1>Orders</h1>
    <p>Manage and track customer orders</p>
</div>

<Card>
    <CardHeader>
        <div class="table-header">
            <h3>Recent Orders</h3>
            <Button Text="New Order" OnClick="@(() => {})" />
        </div>
    </CardHeader>
    <CardContent>
        <table class="simple-table">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Customer</th>
                    <th>Product</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in orders)
                {
                    <tr>
                        <td>@order.OrderId</td>
                        <td>@order.Customer</td>
                        <td>@order.Product</td>
                        <td>@order.Amount</td>
                        <td><span class="status-badge @GetStatusClass(order.Status)">@order.Status</span></td>
                        <td>@order.Date</td>
                    </tr>
                }
            </tbody>
        </table>
    </CardContent>
</Card>

@code {
    private List<Sysinfocus.AspNetCore.Components.Breadcrumb.BreadcrumbModel> breadcrumbItems = new();
    private List<Order> orders = new()
    {
        new Order { OrderId = "#12345", Customer = "John Doe", Product = "Premium Package", Amount = "$299.00", Status = "Completed", Date = "Oct 12, 2025" },
        new Order { OrderId = "#12344", Customer = "Jane Smith", Product = "Standard Package", Amount = "$149.00", Status = "Pending", Date = "Oct 12, 2025" },
        new Order { OrderId = "#12343", Customer = "Bob Johnson", Product = "Enterprise Package", Amount = "$599.00", Status = "Processing", Date = "Oct 11, 2025" },
        new Order { OrderId = "#12342", Customer = "Alice Brown", Product = "Basic Package", Amount = "$99.00", Status = "Completed", Date = "Oct 11, 2025" },
        new Order { OrderId = "#12341", Customer = "Charlie Wilson", Product = "Premium Package", Amount = "$299.00", Status = "Cancelled", Date = "Oct 10, 2025" }
    };

    protected override void OnInitialized()
    {
        breadcrumbItems = new List<Sysinfocus.AspNetCore.Components.Breadcrumb.BreadcrumbModel>
        {
            new Sysinfocus.AspNetCore.Components.Breadcrumb.BreadcrumbModel("Home") { Url = "/" },
            new Sysinfocus.AspNetCore.Components.Breadcrumb.BreadcrumbModel("Orders") { Url = "/orders" }
        };
    }

    private string GetStatusClass(string status)
    {
        return status.ToLower() switch
        {
            "completed" => "success",
            "pending" => "warning",
            "processing" => "info",
            "cancelled" => "danger",
            _ => ""
        };
    }

    public class Order
    {
        public string OrderId { get; set; } = "";
        public string Customer { get; set; } = "";
        public string Product { get; set; } = "";
        public string Amount { get; set; } = "";
        public string Status { get; set; } = "";
        public string Date { get; set; } = "";
    }
}

