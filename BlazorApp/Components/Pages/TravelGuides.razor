        <Button Text="Popular" Size="ButtonSize.Small" Type="@(selectedFilter == "Popular" ? ButtonType.Primary : ButtonType.Secondary)" OnClick="@(() => FilterGuides("Popular"))" />
        <Button Text="Adventure" Size="ButtonSize.Small" Type="@(selectedFilter == "Adventure" ? ButtonType.Primary : ButtonType.Secondary)" OnClick="@(() => FilterGuides("Adventure"))" />
        <Button Text="Beach" Size="ButtonSize.Small" Type="@(selectedFilter == "Beach" ? ButtonType.Primary : ButtonType.Secondary)" OnClick="@(() => FilterGuides("Beach"))" />
    </div>
</div>

<div class="guides-grid">
    @foreach (var guide in filteredGuides)
    {
        <Card Style="min-width: 300px;">
            <CardContent>
                <div class="guide-card">
                    @if (guide.IsFeatured)
                    {
                        <div class="featured-badge">Featured</div>
                    }
                    <div class="guide-icon-large">@guide.Icon</div>
                    <h3>@guide.Name</h3>
                    <div class="guide-location">
                        <Icon Name="location_on" Size="18px" />
                        <span>@guide.Location</span>
                    </div>
                    <p class="guide-description">@guide.Description</p>
                    <div class="guide-meta">
                        <div class="guide-rating">
                            <Icon Name="star" Size="18px" Style="color: #facc15;" />
                            <span>@guide.Rating</span>
                            <span class="review-count">(@guide.ReviewCount)</span>
                        </div>
                        <div class="guide-duration">
                            <Icon Name="schedule" Size="18px" />
                            <span>@guide.Duration</span>
                        </div>
                    </div>
                    <div class="guide-price-row">
                        <div class="guide-price">
                            <span class="price-label">From</span>
                            <span class="price-value">$@guide.Price</span>
                        </div>
                        <Badge Text="@guide.Category" Type="BadgeType.Outline" />
                    </div>
                </div>
            </CardContent>
            <CardFooter>
                <Button Text="View Details" Icon="arrow_forward" Style="width: 100%;" />
            </CardFooter>
        </Card>
    }
</div>

