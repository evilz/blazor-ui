@page "/customers"
@rendermode InteractiveServer

<PageTitle>Customers - Blazor UI</PageTitle>

<div class="mb-8">
    <h1 class="text-3xl font-bold text-slate-800 mb-1">Customers</h1>
    <p class="text-slate-500">Manage your customer relationships</p>
</div>

<Card>
    <div class="flex justify-between items-center mb-6">
        <h3 class="text-lg font-semibold text-slate-800">Customer List</h3>
        <Button Color="ButtonColor.Primary">Add Customer</Button>
    </div>
    
    <Table>
        <thead>
            <tr>
                <th class="text-left px-3 py-3 border-b-2 border-slate-200 font-semibold text-slate-600 text-sm">Name</th>
                <th class="text-left px-3 py-3 border-b-2 border-slate-200 font-semibold text-slate-600 text-sm">Email</th>
                <th class="text-left px-3 py-3 border-b-2 border-slate-200 font-semibold text-slate-600 text-sm">Company</th>
                <th class="text-left px-3 py-3 border-b-2 border-slate-200 font-semibold text-slate-600 text-sm">Status</th>
                <th class="text-left px-3 py-3 border-b-2 border-slate-200 font-semibold text-slate-600 text-sm">Joined</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="px-3 py-3 border-b border-slate-200">
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 text-white flex items-center justify-center font-semibold text-sm">JD</div>
                        <span class="text-slate-800">John Doe</span>
                    </div>
                </td>
                <td class="px-3 py-3 border-b border-slate-200 text-slate-800">john.doe@example.com</td>
                <td class="px-3 py-3 border-b border-slate-200 text-slate-800">Acme Corp</td>
                <td class="px-3 py-3 border-b border-slate-200"><Badge Color="BadgeColor.Success">Active</Badge></td>
                <td class="px-3 py-3 border-b border-slate-200 text-slate-800">Jan 15, 2025</td>
            </tr>
            <tr>
                <td class="px-3 py-3 border-b border-slate-200">
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 text-white flex items-center justify-center font-semibold text-sm">JS</div>
                        <span class="text-slate-800">Jane Smith</span>
                    </div>
                </td>
                <td class="px-3 py-3 border-b border-slate-200 text-slate-800">jane.smith@example.com</td>
                <td class="px-3 py-3 border-b border-slate-200 text-slate-800">Tech Solutions</td>
                <td class="px-3 py-3 border-b border-slate-200"><Badge Color="BadgeColor.Success">Active</Badge></td>
                <td class="px-3 py-3 border-b border-slate-200 text-slate-800">Feb 22, 2025</td>
            </tr>
            <tr>
                <td class="px-3 py-3 border-b border-slate-200">
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 text-white flex items-center justify-center font-semibold text-sm">BJ</div>
                        <span class="text-slate-800">Bob Johnson</span>
                    </div>
                </td>
                <td class="px-3 py-3 border-b border-slate-200 text-slate-800">bob.johnson@example.com</td>
                <td class="px-3 py-3 border-b border-slate-200 text-slate-800">Digital Ventures</td>
                <td class="px-3 py-3 border-b border-slate-200"><Badge Color="BadgeColor.Success">Active</Badge></td>
