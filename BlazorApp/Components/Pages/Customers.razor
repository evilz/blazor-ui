@page "/customers"
@rendermode InteractiveServer

<PageTitle>Customers - Blazor UI</PageTitle>

<div class="page-header">
    <Breadcrumb Items="@breadcrumbItems" />
    <h1>Customers</h1>
    <p>Manage your customer relationships</p>
</div>

<Card>
    <CardHeader>
        <div class="table-header">
            <h3>Customer List</h3>
            <Button Text="Add Customer" OnClick="@(() => {})" />
        </div>
    </CardHeader>
    <CardContent>
        <DataTable Items="customers" TItem="Customer">
            <DataColumns Context="customer">
                <DataTableColumn TItem="Customer" Header="Name">
                    <Template>
                        <div class="customer-name">
                            <Avatar Name="@customer.Name" ImageUrl="" />
                            <span>@customer.Name</span>
                        </div>
                    </Template>
                </DataTableColumn>
                <DataTableColumn TItem="Customer" Header="Email" Property="x => x.Email" />
                <DataTableColumn TItem="Customer" Header="Company" Property="x => x.Company" />
                <DataTableColumn TItem="Customer" Header="Status">
                    <Template>
                        <span class="status-badge @(customer.IsActive ? "active" : "inactive")">@(customer.IsActive ? "Active" : "Inactive")</span>
                    </Template>
                </DataTableColumn>
                <DataTableColumn TItem="Customer" Header="Joined" Property="x => x.JoinedDate" />
            </DataColumns>
        </DataTable>
    </CardContent>
</Card>

@code {
    private List<Sysinfocus.AspNetCore.Components.Breadcrumb.BreadcrumbModel> breadcrumbItems = new();
    private List<Customer> customers = new()
    {
        new Customer { Initials = "JD", Name = "John Doe", Email = "john.doe@example.com", Company = "Acme Corp", IsActive = true, JoinedDate = "Jan 15, 2025" },
        new Customer { Initials = "JS", Name = "Jane Smith", Email = "jane.smith@example.com", Company = "Tech Solutions", IsActive = true, JoinedDate = "Feb 22, 2025" },
        new Customer { Initials = "BJ", Name = "Bob Johnson", Email = "bob.johnson@example.com", Company = "Digital Ventures", IsActive = true, JoinedDate = "Mar 10, 2025" },
        new Customer { Initials = "AB", Name = "Alice Brown", Email = "alice.brown@example.com", Company = "Innovation Labs", IsActive = false, JoinedDate = "Apr 5, 2025" },
        new Customer { Initials = "CW", Name = "Charlie Wilson", Email = "charlie.wilson@example.com", Company = "Global Systems", IsActive = true, JoinedDate = "May 18, 2025" }
    };

    protected override void OnInitialized()
    {
        breadcrumbItems = new List<Sysinfocus.AspNetCore.Components.Breadcrumb.BreadcrumbModel>
        {
            new Sysinfocus.AspNetCore.Components.Breadcrumb.BreadcrumbModel("Home") { Url = "/" },
            new Sysinfocus.AspNetCore.Components.Breadcrumb.BreadcrumbModel("Customers") { Url = "/customers" }
        };
    }

    public class Customer
    {
        public string Initials { get; set; } = "";
        public string Name { get; set; } = "";
        public string Email { get; set; } = "";
        public string Company { get; set; } = "";
        public bool IsActive { get; set; }
        public string JoinedDate { get; set; } = "";
    }
}

<style>
    .page-header {
        margin-bottom: 2rem;
    }

    .page-header h1 {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 0.25rem;
        color: #1e293b;
    }

    .page-header p {
        color: #64748b;
        margin: 0;
    }

    .table-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
    }

    .table-header h3 {
        margin: 0;
        font-size: 1.125rem;
        font-weight: 600;
        color: #1e293b;
    }

    .customer-name {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .status-badge {
