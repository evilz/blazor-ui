<!-- User Profile Card with Avatar -->
<Card>
    <CardHeader>
        <div class="space-y-4">

            <div class="flex items-center justify-between">
                
                <div class="flex items-center space-x-3">
                    <Avatar Name="John Doe" Background="seagreen"/>
                    <div>
                        <h3>User Profile</h3>
                        <p class="subtitle">Active Account</p>
                        </div>
                </div>
               
            </div>
      
        </div>

       
    </CardHeader>
    <CardContent>
        <div class="flex-col" style="gap: 1rem">
            <div class="flex">
                <Icon Name="email"/>
                <span>john.doe@example.com</span>
            </div>
            <div class="flex">
                <Icon Name="phone"/>
                <span>+1 234 567 8900</span>
            </div>
            <div class="flex">
                <Icon Name="location_on"/>
                <span>San Francisco, CA</span>
            </div>
        </div>
    </CardContent>
    <CardFooter>
        <div class="flex w-full" style=" padding: 1.5rem; padding-top: 0">
            <Button Text="Edit Profile" Type="ButtonType.Outline" OnClick="@(() => { })"/>
            <Button Text="Settings" OnClick="@(() => { })"/>
        </div>
      
    </CardFooter>
</Card>